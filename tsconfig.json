{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "outDir": "./dist"
  },
  "include": ["**/*.ts", "**/*.d.ts", "tests"],
  "exclude": ["dist"]
}
