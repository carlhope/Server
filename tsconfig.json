{
  "compilerOptions": {
    "target": "ES2020",
    "noEmit":true,
    "allowImportingTsExtensions": true,
    "module": "NodeNext",
    "moduleResolution": "node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["**/*.ts"]
}
